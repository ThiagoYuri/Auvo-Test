@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div>
        

        


        <form id="fileForm" method="post" enctype="multipart/form-data" asp-controller="AnalisePonto" asp-action="Index">
            <label for="fileInput">Escolha a pasta contendo os arquivos para análise:</label>
            <input class="form-control form-control-lg"
                   id="ctrl"
                   name="files"
                   type="file"
                   webkitdirectory directory multiple
                   onchange="handleFileSelection()">
            <br>
            <input type="submit" value="Enviar e realizar análise" />
            <br>
            <br>

        </form>


        
            
        
        <a href="https://localhost:7014/AnalisePonto/Relatorio">
            <button class="btn btn-primary">Relatorio</button>
            </a>
        
    </div>
</div>
